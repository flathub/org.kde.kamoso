{
    "id": "org.kde.kamoso",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "kamoso",
    "rename-icon": "kamoso",
    "finish-args": [
        "--device=all",
        "--device=dri",
        "--filesystem=xdg-pictures",
        "--filesystem=xdg-run/pipewire-0",
        "--filesystem=xdg-videos",
        "--share=ipc",
        "--socket=pulseaudio",
        "--socket=wayland",
        "--socket=x11"
    ],
    "cleanup": [
        "*.a",
        "*.la",
        "/include",
        "/lib/pkgconfig",
        "/share/doc",
        "/share/man"
    ],
    "modules": [
        {
            "name": "kamoso",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/21.12.3/src/kamoso-21.12.3.tar.xz",
                    "sha256": "2bde8e8e6de25673a412ba6a966e898959ee5625dcadadc1bc295c12ad7128e1",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/kamaso-$version.tar.xz"
                    }
                },
                {
                    "type": "patch",
                    "path": "appdata.patch"
                },
                {
                    "type": "file",
                    "path": "128-apps-kamoso.png"
                }
            ],
            "post-install": [
                "install -Dpm 0644 128-apps-kamoso.png /app/share/icons/hicolor/128x128/apps/kamoso.png"
            ]
        }
    ]
}
