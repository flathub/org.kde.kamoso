{
    "id": "org.kde.kamoso",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "kamoso",
    "rename-icon": "kamoso",
    "finish-args": [
        "--device=all",
        "--device=dri",
        "--filesystem=xdg-pictures",
        "--filesystem=xdg-run/pipewire-0",
        "--filesystem=xdg-videos",
        "--share=ipc",
        "--socket=pulseaudio",
        "--socket=wayland",
        "--socket=x11",
        "--talk-name=org.a11y.Bus"
    ],
    "cleanup": [
        "*.a",
        "*.la",
        "/include",
        "/lib/pkgconfig",
        "/share/doc",
        "/share/man"
    ],
    "modules": [
        {
            "name": "kamoso",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/21.12.1/src/kamoso-21.12.1.tar.xz",
                    "sha256": "380c9f0aa53029269f4a8c1e2b46834ac6da5c16eeef6aca4e524e522bde7428"
                },
                {
                    "type": "patch",
                    "path": "appdata.patch"
                },
                {
                    "type": "file",
                    "path": "128-apps-kamoso.png"
                }
            ],
            "post-install": [
                "install -Dpm 0644 128-apps-kamoso.png /app/share/icons/hicolor/128x128/apps/kamoso.png"
            ]
        }
    ]
}
